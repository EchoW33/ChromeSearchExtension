{
	"name":"Search in this site",
	"version":"1.0",
	"description":"Use 'keyword site:site_name.com' to search",
	"permissions":["storage"],
	"background":{
		"scripts":["background.js"],
		"persistent":false
	},
	"page_action":{
		"default_popup":"search.html",
		"default_icon":{
			"16": "images/icon16.png",
			"32": "images/icon32.png",
			"48": "images/icon48.png",
			"128": "images/icon128.png"
		}
	},	
	"icons":{
			"16": "images/icon16.png",
			"32": "images/icon32.png",
			"48": "images/icon48.png",
			"128": "images/icon128.png"
		},
	"permissions":["declarativeContent","storage","tabs"],
	"manifest_version": 2
}